{
    "name": "tasker",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "vite",
        "build": "vite build",
        "electron": "electron .",
        "dev": "concurrently \"npm run start\" \"wait-on http://localhost:5173 && echo 'Vite is up, starting Electron...' && sleep 2 && npm run electron\""
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sleep": "^6.3.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.3.1",
        "concurrently": "^7.6.0",
        "electron": "^25.0.0",
        "vite": "^5.0.0",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.example.react-electron-app",
        "productName": "React Electron App"
    },
    "files": [
        "dist/**/*",
        "main.js",
        "preload.js"
    ]
}
